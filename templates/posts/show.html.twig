{% extends 'base.html.twig' %}

{% block title %}Show Post{% endblock %}

{% block body %}
    <br /><br />
    <div class="container" style="width: 45%;">

        <h1 class="text-center">Show Posts</h1>
        <br />
        <table id="posts" class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Message</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.title }}</td>
                    <td>{{ post.message }}</td>
                    <td>
                        <a href="/post/edit/{{ post.id }}" class="btn btn-dark">Edit</a>
                        <a href="#" class="btn btn-danger delete-post" data-id="{{ post.id }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}
